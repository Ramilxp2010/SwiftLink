<Window x:Class="Pet.SwiftLink.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pet.SwiftLink.Desktop" 
        xmlns:local1="clr-namespace:Pet.SwiftLink.Desktop.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель поиска и кнопка добавления -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBox x:Name="SearchBox" Width="300" Margin="5">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Grid>
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                        <TextBlock Text="Поиск..." Foreground="Gray" Margin="5,0"
                                       Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, 
                                       Converter={StaticResource StringToVisibilityConverter}}"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <Button x:Name="AddButton" Content="+" Width="30" Margin="5" Click="AddButton_Click"/>
        </StackPanel>

        <!-- Список ярлыков -->
        <ListView x:Name="LinksList" Grid.Row="1" MouseDoubleClick="LinksList_MouseDoubleClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="20" Height="20" Margin="0,0,10,0">
                            <Image.Source>
                                <Binding Path="Type">
                                    <Binding.Converter>
                                        <local1:QuickLinkTypeToIconConverter/>
                                    </Binding.Converter>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>  